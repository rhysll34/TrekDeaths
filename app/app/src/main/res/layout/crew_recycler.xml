<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/cr_crew_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="James McCoy"/>

    <TextView
        android:id="@+id/cr_crew_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/cr_stardate"
        app:layout_constraintTop_toBottomOf="@id/cr_crew_name"
        tools:text="Transporter accident"/>

    <TextView
        android:id="@+id/cr_stardate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cr_crew_note"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cr_crew_note"
        app:layout_constraintBottom_toBottomOf="@id/cr_crew_note"
        tools:visibility="visible"
        android:visibility="gone"
        tools:text="1234.5"/>



</androidx.constraintlayout.widget.ConstraintLayout>